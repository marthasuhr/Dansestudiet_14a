---
const { variant, size } = Astro.props;
---

<button data-variant={variant} data-size={size} >
  <slot />
</button>

<style>
  button {
    border-radius: 0px;
    border: none;
  }

  /* Variants */
  [data-variant="Primary_Default"] {
    background: var(--tertiary-grey);
    color: var(--primary-blue);
border: 3px solid var(--primary-blue, #196472);
    border-style: double;
  }
  [data-variant="Primary_Default"]:hover {
    background: var(--secondary-yellow);
    color: var(--primary-blue);
    border-color: var(--primary-blue);
    border-style: double;
  }

   [data-variant="Secondary_Default"] {
    background: var(--tertiary-grey);
    color: var(--primary-blue);
border: 3px solid var(--primary-blue);
    border-style: double;
  }
  [data-variant="Secondary_Default"]:hover {
    background: var(--secondary-blue);
    color: var(--tertiary-grey);
    border-color: var(--primary-blue);
    border-style: double;
  }


  /* Sizes */
  [data-size="Small"] {
    padding: 0.6rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  [data-size="Large"] {
    padding: 1rem;
    padding-left: 3rem;
    padding-right: 3rem;
  }

  @media (min-width: 900px) {
  
    [data-size="lille"] {
      padding: 0.8rem;
      padding-left: 2rem;
      padding-right: 2rem;
    }
    [data-size="stor"] {
      font-weight: var(--regular);
      font-size: 24px;
      padding: 1.8rem;
      padding-left: 4rem;
      padding-right: 4rem;
    }
  }
</style>