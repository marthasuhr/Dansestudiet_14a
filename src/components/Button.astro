---
const { variant, size } = Astro.props;
---

<button data-variant={variant} data-size={size} >
  <slot />
</button>

<style>
  
  button {
    border-radius: 0px;
    border: none;
  }

  /* Variants */
  [data-variant="Primary"] {

    color: var(--primary-blue);
border: 2px solid var(--primary-blue, #196472);
background: var(--tertiary-grey, #EFEFEF);
    border-style: double;
  }
  [data-variant="Primary"]:hover {
    background: var(--secondary-yellow);
    color: var(--primary-blue);
    border-color: var(--primary-blue);
    border-style: double;
  }

   [data-variant="Secondary"] {
   background:  var(--primary-blue);
    color: var(--tertiary-grey);
    border-color: var(--tertiary-grey);
    border-style: double;
  }
  [data-variant="Secondary"]:hover {
   background: var(--secondary-blue);
    color: var(--primary-blue);
border: 3px solid var(--primary-blue);
    border-style: double;
  }

/*   [data-variant="Tertiary_Default"] {
    
     background:  var(--primary-blue);
    color: var(--tertiary-grey);
    border-color: var(--tertiary-grey);
    border-style: double;
  }
  [data-variant="Tertiary_Default"]:hover {
   background: var(--secondary-blue)
    color: var(--primary-blue);
border: 3px solid var(--primary-blue);
    border-style: double;
    
  } */

  /* Sizes */
  /*[data-size="Small"] {
    padding: 0.6rem;
    padding-left: 2rem;
    padding-right: 2rem;
  } */ 

  [data-size="Large"] {
    padding: 1rem;
    padding-left: 2rem;
    padding-right: 2rem;
    font-size: 15px;
  }

  @media (min-width: 900px) {
  
   /* [data-size="Small"] {

      padding-left: 2rem;
      padding-right: 2rem;
    } */
    [data-size="Large"] {
    
      font-size: 24px;
    
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
</style>